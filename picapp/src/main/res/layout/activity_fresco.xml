<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.promise.picapp.fresco.FrescoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_fresco_simple3"
            android:layout_width="500dp"
            android:layout_height="500dp"
            fresco:placeholderImage="@mipmap/github"
            fresco:fadeDuration="5000"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:progressBarImage="@mipmap/ic_launcher"
            fresco:progressBarImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:roundAsCircle="true"

            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="500dp"
            android:layout_height="500dp"
            fresco:placeholderImage="@mipmap/github"
            fresco:actualImageUri="http://ww4.sinaimg.cn/large/610dc034gw1evi6jh2mllj20gy0bgwf1.jpg"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_fresco_simple1"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="1.33"
            fresco:placeholderImage="@mipmap/github"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:failureImage="@mipmap/ic_launcher_round"
            fresco:failureImageScaleType="centerInside"
            fresco:retryImage="@mipmap/ic_launcher"
            fresco:retryImageScaleType="centerCrop"
            fresco:progressBarImage="@mipmap/mask_starfish"
            fresco:progressBarImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:backgroundImage="@color/colorPrimary"
            fresco:pressedStateOverlayImage="@color/colorPrimaryDark"
            fresco:roundAsCircle="false"
            fresco:roundedCornerRadius="1dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="false"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="true"
            fresco:roundWithOverlayColor="@color/colorAccent"
            fresco:roundingBorderWidth="2dp"
            fresco:roundingBorderColor="@color/colorAccent"

            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_fresco_simple2"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="1.33"
            fresco:placeholderImage="@mipmap/github"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:failureImage="@mipmap/ic_launcher_round"
            fresco:failureImageScaleType="centerInside"
            fresco:retryImage="@mipmap/ic_launcher"
            fresco:retryImageScaleType="centerCrop"
            fresco:progressBarImage="@mipmap/mask_starfish"
            fresco:progressBarImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:backgroundImage="@color/colorPrimary"
            fresco:pressedStateOverlayImage="@color/colorPrimaryDark"
            fresco:roundAsCircle="false"
            fresco:roundedCornerRadius="1dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="false"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="true"
            fresco:roundWithOverlayColor="@color/colorAccent"
            fresco:roundingBorderWidth="2dp"
            fresco:roundingBorderColor="@color/colorAccent"

            />





    </LinearLayout>

</ScrollView>
